import { Head, useForm } from '@inertiajs/react';
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Label } from '@/components/ui/label';
import { Input } from '@/components/ui/input';
import InputError from '@/components/input-error';
import { ChevronRight } from 'lucide-react';
import { router } from '@inertiajs/react';

type DatabaseForm = {
    connection: string;
    host: string;
    port: string;
    database: string;
    username: string;
    password: string;
};

const defaultValues: DatabaseForm = {
    connection: 'sqlite',
    host: '127.0.0.1',
    port: '3306',
    database: 'laravel',
    username: 'root',
    password: '',
};

export default function InstallDatabase() {
    const { data, setData, post, processing, errors, clearErrors } = useForm<DatabaseForm>(defaultValues);

    const handleSubmit = (e: React.FormEvent<HTMLFormElement>) => {
        e.preventDefault();

        // Clear all errors before submitting
        clearErrors();

        // Submit form
        post('/install/database');
    };

    const handleBack = () => {
        router.get('/install/check');
    };

    return (
        <>
            <Head title="Database Configuration - Installation" />

            <div className="flex min-h-screen flex-col items-center justify-center bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 p-6">
                <div className="w-full max-w-3xl">
                    {/* Header */}
                    <div className="text-center mb-8">
                        <h1 className="text-3xl font-bold text-gray-900 dark:text-white mb-2">
                            Database Configuration
                        </h1>
                        <p className="text-gray-600 dark:text-gray-400">
                            Step 3 of 4: Configure your database connection
                        </p>
                    </div>

                    {/* Database Configuration Form */}
                    <Card>
                        <CardHeader>
                            <CardTitle>Database Settings</CardTitle>
                            <CardDescription>
                                Choose your database type and configure connection settings
                            </CardDescription>
                        </CardHeader>
                        <CardContent>
                            <form onSubmit={handleSubmit} className="space-y-6">
                                <div>
                                    <Label htmlFor="connection">Database Type</Label>
                                    <select
                                        id="connection"
                                        value={data.connection}
                                        onChange={(e) => {
                                            setData('connection', e.target.value);
                                            clearErrors('connection');
                                        }}
                                        className="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500 dark:border-gray-600 dark:bg-gray-700 dark:text-white px-3 py-2 border"
                                        required
                                    >
                                        <option value="sqlite">SQLite</option>
                                        <option value="mysql">MySQL</option>
                                        <option value="pgsql">PostgreSQL</option>
                                    </select>
                                    <InputError message={errors.connection} className="mt-2" />
                                </div>

                                {data.connection !== 'sqlite' && (
                                    <>
                                        <div className="grid grid-cols-2 gap-4">
                                            <div>
                                                <Label htmlFor="host">Host</Label>
                                                <Input
                                                    id="host"
                                                    name="host"
                                                    type="text"
                                                    value={data.host}
                                                    onChange={(e) => {
                                                        setData('host', e.target.value);
                                                        clearErrors('host');
                                                    }}
                                                    placeholder="127.0.0.1"
                                                    required
                                                />
                                                <InputError message={errors.host} className="mt-2" />
                                            </div>

                                            <div>
                                                <Label htmlFor="port">Port</Label>
                                                <Input
                                                    id="port"
                                                    name="port"
                                                    type="text"
                                                    value={data.port}
                                                    onChange={(e) => {
                                                        setData('port', e.target.value);
                                                        clearErrors('port');
                                                    }}
                                                    placeholder="3306"
                                                    required
                                                />
                                                <InputError message={errors.port} className="mt-2" />
                                            </div>
                                        </div>

                                        <div>
                                            <Label htmlFor="database">Database Name</Label>
                                            <Input
                                                id="database"
                                                name="database"
                                                type="text"
                                                value={data.database}
                                                onChange={(e) => {
                                                    setData('database', e.target.value);
                                                    clearErrors('database');
                                                }}
                                                placeholder="laravel"
                                                required
                                            />
                                            <InputError message={errors.database} className="mt-2" />
                                        </div>

                                        <div>
                                            <Label htmlFor="username">Username</Label>
                                            <Input
                                                id="username"
                                                name="username"
                                                type="text"
                                                value={data.username}
                                                onChange={(e) => {
                                                    setData('username', e.target.value);
                                                    clearErrors('username');
                                                }}
                                                placeholder="root"
                                                required
                                            />
                                            <InputError message={errors.username} className="mt-2" />
                                        </div>

                                        <div>
                                            <Label htmlFor="password">Password</Label>
                                            <Input
                                                id="password"
                                                name="password"
                                                type="password"
                                                value={data.password}
                                                onChange={(e) => {
                                                    setData('password', e.target.value);
                                                    clearErrors('password');
                                                }}
                                            />
                                            <InputError message={errors.password} className="mt-2" />
                                        </div>
                                    </>
                                )}

                                {data.connection === 'sqlite' && (
                                    <div className="rounded-md bg-blue-50 p-4 dark:bg-blue-900/20">
                                        <p className="text-sm text-blue-700 dark:text-blue-300">
                                            <strong>SQLite</strong> will be used with the default database file located at{' '}
                                            <code className="rounded bg-blue-100 px-1 py-0.5 dark:bg-blue-800">
                                                database/database.sqlite
                                            </code>
                                        </p>
                                    </div>
                                )}

                                {errors.database && typeof errors.database === 'string' && (
                                    <div className="rounded-md bg-red-50 p-4 dark:bg-red-900/20 border border-red-200 dark:border-red-800">
                                        <p className="text-sm text-red-700 dark:text-red-300">
                                            {errors.database}
                                        </p>
                                    </div>
                                )}

                                {/* Actions */}
                                <div className="mt-6 flex gap-4">
                                    <Button
                                        onClick={handleBack}
                                        variant="outline"
                                        className="flex-1"
                                        size="lg"
                                        type="button"
                                    >
                                        Back
                                    </Button>
                                    <Button
                                        type="submit"
                                        disabled={processing}
                                        className="flex-1"
                                        size="lg"
                                    >
                                        {processing ? 'Testing...' : 'Continue'}
                                        {!processing && <ChevronRight className="ml-2 h-4 w-4" />}
                                    </Button>
                                </div>
                            </form>
                        </CardContent>
                    </Card>
                </div>
            </div>
        </>
    );
}
