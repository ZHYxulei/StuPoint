import { Head, useForm } from '@inertiajs/react';
import { Button } from '@/components/ui/button';
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card';
import { Label } from '@/components/ui/label';
import { Input } from '@/components/ui/input';
import InputError from '@/components/input-error';
import { ChevronRight } from 'lucide-react';
import { router } from '@inertiajs/react';

type AccountForm = {
    nickname: string;
    email: string;
    password: string;
    password_confirmation: string;
    site_name: string;
};

const defaultValues: AccountForm = {
    nickname: '',
    email: '',
    password: '',
    password_confirmation: '',
    site_name: 'Student Points System',
};

export default function InstallAccount() {
    const { data, setData, post, processing, errors, clearErrors } = useForm<AccountForm>(defaultValues);

    const handleSubmit = (e: React.FormEvent<HTMLFormElement>) => {
        e.preventDefault();
        clearErrors();
        post('/install/account', {
            onError: (errors) => {
                console.error('Account creation errors:', errors);
            },
        });
    };

    const handleBack = () => {
        router.get('/install/database');
    };

    return (
        <>
            <Head title="Create Admin Account - Installation" />

            <div className="flex min-h-screen flex-col items-center justify-center bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 p-6">
                <div className="w-full max-w-3xl">
                    {/* Header */}
                    <div className="text-center mb-8">
                        <h1 className="text-3xl font-bold text-gray-900 dark:text-white mb-2">
                            Create Admin Account
                        </h1>
                        <p className="text-gray-600 dark:text-gray-400">
                            Step 4 of 4: Set up your administrator account
                        </p>
                    </div>

                    {/* Account Form */}
                    <Card>
                        <CardHeader>
                            <CardTitle>Administrator Information</CardTitle>
                            <CardDescription>
                                Create your super admin account to manage the system
                            </CardDescription>
                        </CardHeader>
                        <CardContent>
                            <form onSubmit={handleSubmit} className="space-y-6">
                                <div>
                                    <Label htmlFor="site_name">Site Name</Label>
                                    <Input
                                        id="site_name"
                                        name="site_name"
                                        type="text"
                                        value={data.site_name}
                                        onChange={(e) => {
                                            setData('site_name', e.target.value);
                                            clearErrors('site_name');
                                        }}
                                        placeholder="Student Points System"
                                        required
                                    />
                                    <InputError message={errors.site_name} className="mt-2" />
                                </div>

                                <div>
                                    <Label htmlFor="nickname">Admin Nickname</Label>
                                    <Input
                                        id="nickname"
                                        name="nickname"
                                        type="text"
                                        value={data.nickname}
                                        onChange={(e) => {
                                            setData('nickname', e.target.value);
                                            clearErrors('nickname');
                                        }}
                                        placeholder="Administrator"
                                        required
                                        autoFocus
                                    />
                                    <InputError message={errors.nickname} className="mt-2" />
                                    <p className="mt-1 text-sm text-gray-500 dark:text-gray-400">
                                        This will be your display name throughout the system
                                    </p>
                                </div>

                                <div>
                                    <Label htmlFor="email">Admin Email</Label>
                                    <Input
                                        id="email"
                                        name="email"
                                        type="email"
                                        value={data.email}
                                        onChange={(e) => {
                                            setData('email', e.target.value);
                                            clearErrors('email');
                                        }}
                                        placeholder="admin@example.com"
                                        required
                                    />
                                    <InputError message={errors.email} className="mt-2" />
                                </div>

                                <div>
                                    <Label htmlFor="password">Password</Label>
                                    <Input
                                        id="password"
                                        name="password"
                                        type="password"
                                        value={data.password}
                                        onChange={(e) => {
                                            setData('password', e.target.value);
                                            clearErrors('password');
                                        }}
                                        required
                                    />
                                    <InputError message={errors.password} className="mt-2" />
                                </div>

                                <div>
                                    <Label htmlFor="password_confirmation">Confirm Password</Label>
                                    <Input
                                        id="password_confirmation"
                                        name="password_confirmation"
                                        type="password"
                                        value={data.password_confirmation}
                                        onChange={(e) => {
                                            setData('password_confirmation', e.target.value);
                                        }}
                                        required
                                    />
                                </div>

                                {errors.install && typeof errors.install === 'string' && (
                                    <div className="rounded-md bg-red-50 p-4 dark:bg-red-900/20 border border-red-200 dark:border-red-800">
                                        <p className="text-sm text-red-700 dark:text-red-300">
                                            {errors.install}
                                        </p>
                                    </div>
                                )}

                                {/* Actions */}
                                <div className="mt-6 flex gap-4">
                                    <Button
                                        onClick={handleBack}
                                        variant="outline"
                                        className="flex-1"
                                        size="lg"
                                        type="button"
                                    >
                                        Back
                                    </Button>
                                    <Button
                                        type="submit"
                                        disabled={processing}
                                        className="flex-1"
                                        size="lg"
                                    >
                                        {processing ? 'Installing...' : 'Complete Installation'}
                                        {!processing && <ChevronRight className="ml-2 h-4 w-4" />}
                                    </Button>
                                </div>
                            </form>
                        </CardContent>
                    </Card>
                </div>
            </div>
        </>
    );
}
